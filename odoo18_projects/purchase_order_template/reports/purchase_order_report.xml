<odoo>
    <!-- Custom Purchase Order Report Action -->
    <record id="paperformat_a4_portrait" model="report.paperformat">
        <field name="name">A4 Portrait</field>
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="default">True</field>
        <field name="margin_top">20</field>
        <field name="margin_bottom">20</field>
        <field name="margin_left">15</field>
        <field name="margin_right">15</field>
    </record>



    <record id="action_report_custom_purchase_order" model="ir.actions.report">
        <field name="name">Purchase Order PDF</field>
        <field name="model">purchase.order</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">purchase_order_template.report_purchase_order_document</field>
        <field name="report_file">purchase_order_template.report_purchase_order_document</field>
        <field name="print_report_name">'Purchase Order - %s' % (object.name)</field>
        <field name="binding_model_id" ref="purchase.model_purchase_order"/>
        <field name="paperformat_id" ref="paperformat_a4_portrait"/>  <!-- Link here -->
    </record>    </odoo>
