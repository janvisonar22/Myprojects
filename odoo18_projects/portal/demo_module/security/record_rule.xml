<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
	<!-- Record Rule for Teachers: see only their students -->
	<record id="rule_teacher_own_students" model="ir.rule">
		<field name="name">Teacher: Own Students</field>
		<field name="model_id" ref="model_student_profile"/>
		<field name="groups" eval="[(4, ref('demo_module.group_school_erp_teacher'))]"/>
		<field name="domain_force">[('teacher_id', '=', user.id)]</field>
		<field name="perm_read" eval="1"/>
		<field name="perm_write" eval="1"/>
		<field name="perm_create" eval="0"/>
		<field name="perm_unlink" eval="0"/>
	</record>
</odoo>
