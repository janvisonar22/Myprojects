<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="portal_resignation_form" name="Resignation Form">
    <t t-call="portal.portal_layout">
        <t t-set="title">Submit Resignation</t>

        <style>
            /* MAIN TITLE */
            .up-form-title {
                font-size: 36px;
                font-weight: 800;
                margin-bottom: 10px;
                text-align: center;
                background: linear-gradient(90deg, #0040ff, #5c7cfa, #4ac7ff);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                letter-spacing: 1px;
            }

            /* SUBTITLE */
            .up-form-subtitle {
                text-align: center;
                color: #4a4a4a;
                font-size: 16px;
                margin-bottom: 25px;
            }

            /* MAIN GLASS CARD */
            .up-form-card {
                background: rgba(255, 255, 255, 0.20);
                backdrop-filter: blur(15px);
                padding: 35px;
                border-radius: 20px;
                border: 2px solid rgba(255, 255, 255, 0.25);
                box-shadow: 0 15px 40px rgba(0,0,0,0.12);
                animation: fadeIn 0.8s ease;
                position: relative;
            }

            /* FLOAT ANIMATION ON HOVER */
            .up-form-card:hover {
                transform: translateY(-4px);
                transition: 0.3s;
                box-shadow: 0 20px 50px rgba(0,0,0,0.18);
            }

            /* GRADIENT BORDER ANIMATION */
            .up-form-card::before {
                content: "";
                position: absolute;
                top: -2px;
                left: -2px;
                right: -2px;
                bottom: -2px;
                border-radius: 22px;
                padding: 2px;
                background: linear-gradient(120deg, #0052d4, #4364f7, #6fb1fc);
                -webkit-mask: 
                    linear-gradient(#fff 0 0) content-box, 
                    linear-gradient(#fff 0 0);
                -webkit-mask-composite: xor;
                mask-composite: exclude;
                z-index: -1;
                animation: borderMove 3s linear infinite;
            }

            @keyframes borderMove {
                0% { background-position: 0% 50%; }
                100% { background-position: 100% 50%; }
            }

            /* INPUT LABEL */
            .up-label {
                font-weight: 700;
                color: #0a1a3c;
                margin-bottom: 6px;
                display: flex;
                gap: 6px;
                align-items: center;
            }

            .up-label i {
                color: #0052d4;
            }

            /* INPUT FIELDS */
            .up-input, .up-textarea {
                border-radius: 12px !important;
                border: 1px solid #d7def0;
                padding: 12px 15px;
                background: rgba(255, 255, 255, 0.75);
                box-shadow: inset 0 2px 6px rgba(0,0,0,0.05);
                transition: 0.25s;
            }

            .up-input:focus, .up-textarea:focus {
                border-color: #0052d4;
                box-shadow: 0 0 0 3px rgba(0, 82, 212, 0.15);
            }

            /* BUTTON */
            .btn-submit {
                background: linear-gradient(90deg, #0040ff, #5c7cfa);
                border: none;
                padding: 14px 22px;
                border-radius: 14px;
                font-weight: 700;
                color: white !important;
                width: 100%;
                margin-top: 22px;
                font-size: 16px;
                box-shadow: 0 6px 18px rgba(0, 80, 230, 0.35);
                transition: 0.25s;
                letter-spacing: 0.5px;
            }

            .btn-submit:hover {
                transform: translateY(-3px);
                box-shadow: 0 12px 26px rgba(0, 80, 230, 0.45);
            }

            /* BACKGROUND */
            .up-bg {
                background-image: radial-gradient(#d8e8ff 1px, transparent 1px);
                background-size: 20px 20px;
                padding: 30px 0;
            }

            /* ANIMATION */
            @keyframes fadeIn {
                from { opacity:0; transform:translateY(20px); }
                to   { opacity:1; transform:translateY(0); }
            }
        </style>

        <div class="up-bg">
            <div class="container mt-5" style="max-width:650px;">

                <h2 class="up-form-title">Submit Resignation</h2>
                <p class="up-form-subtitle">
                    Please provide your resignation details below.
                </p>

                <!-- Resignation Form Card -->
                <div class="up-form-card">

                    <form method="post" action="/my/contracts/resignation/submit">
                        <input type="hidden" name="contract_id" t-att-value="contract.id"/>

                        <!-- DATE -->
                        <div class="mt-3">
                            <label class="up-label">
                                <i class="fa fa-calendar-alt"></i> Submit Date
                            </label>
                                <t t-set="today" t-value="datetime.date.today().strftime('%Y-%m-%d')"/>

                                <input type="date"
                                       name="submit_date"
                                       class="form-control up-input"
                                       t-att-value="today"/>
                        </div>

                        <!-- REASON -->
                        <div class="mt-3">
                            <label class="up-label">
                                <i class="fa fa-align-left"></i> Reason for Resignation
                            </label>
                            <textarea name="reason" class="form-control up-textarea" rows="4"></textarea>
                        </div>

                        <!-- BUTTON -->
                        <button class="btn btn-submit" type="submit">
                            Submit Resignation
                        </button>

                    </form>

                </div>
            </div>
        </div>
    </t>
</template>
</odoo>
