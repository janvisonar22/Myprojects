<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template id="portal_contract_detail_template" name="Contract Detail Page">
    <t t-call="portal.portal_layout">
        <t t-set="title">Contract Details</t>

        <style>
            .up-contract-title {
                font-size: 34px;
                font-weight: 700;
                margin-bottom: 15px;
                background: linear-gradient(90deg, #0052d4, #4364f7, #6fb1fc);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
            }

            .up-contract-card {
                background: rgba(255, 255, 255, 0.15);
                backdrop-filter: blur(12px);
                padding: 25px;
                border-radius: 16px;
                border: 1px solid rgba(255, 255, 255, 0.2);
                box-shadow: 0 10px 35px rgba(0,0,0,0.12);
                animation: fadeIn 0.8s ease;
            }

            @keyframes fadeIn {
                from { opacity:0; transform:translateY(10px); }
                to   { opacity:1; transform:translateY(0); }
            }

            .up-label {
                font-weight: 600;
                color: #0a1a3c;
            }

            .btn-resign {
                background: linear-gradient(90deg, #d53369, #da3a3a);
                border: none;
                padding: 10px 18px;
                border-radius: 10px;
                font-weight: 600;
                color: white !important;
                box-shadow: 0 4px 12px rgba(218,58,58,0.4);
                transition: 0.2s;
            }

            .btn-resign:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 18px rgba(218,58,58,0.6);
            }
        </style>

        <div class="container mt-4">

            <!-- PAGE TITLE -->
            <h2 class="up-contract-title">
                Contract Details
            </h2>

            <!-- CONTRACT NAME + BUTTON -->
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 style="font-weight:700; color:#0a1a3c;">
                    <t t-esc="contract.name"/>
                </h4>
            <t t-if="contract.has_pending_resignation">

                <a t-att-href="'/my/contracts/%s/resign' % contract.id"
                   class="btn btn-resign">
                    Submit Resignation
                </a>
            </t>
            </div>

            <!-- DETAIL CARD -->
            <div class="up-contract-card">

                <p>
                    <span class="up-label">Employee:</span>
                    <t t-esc="contract.employee_id.name"/>
                </p>

                <p>
                    <span class="up-label">Current Date:</span>
                    <t t-esc="contract.current_date"/>
                </p>

                <p>
                    <span class="up-label">Salary Start Month:</span>
                    <t t-esc="contract.salary_start_month"/>
                </p>

                <p>
                    <span class="up-label">Start Date:</span>
                    <t t-esc="contract.date_start"/>
                </p>

                <p>
                    <span class="up-label">End Date:</span>
                    <t t-esc="contract.date_end or '-'"/>
                </p>

                <p>
                    <span class="up-label">Salary:</span>
                    â‚¹ <t t-esc="contract.wage"/>
                </p>

                <p>
                    <span class="up-label">Status:</span>
                    <span class="badge bg-info">
                        <t t-esc="contract.state"/>
                    </span>
                </p>

            </div>

        </div>
    </t>
</template>

</odoo>
