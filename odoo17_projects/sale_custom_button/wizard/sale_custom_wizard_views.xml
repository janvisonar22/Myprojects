<odoo>
    <record id="view_sale_custom_wizard_form" model="ir.ui.view">
        <field name="name">sale.custom.wizard.form</field>
        <field name="model">sale.custom.wizard</field>
        <field name="arch" type="xml">
            <form string="Custom Wizard">
                <group>
                    <field name="order_id"/>
                        <field name="partner_id"/>
                        <!-- <field name="amount_total"/> -->
                        <!-- <field name="state"/> -->
                    </group>
                    
                    <group>
                        <field name="date_order"/>
                        <field name="user_id"/>
                        <field name="payment_term_id"/>
                    <!-- <field name="client_order_ref"/> -->
                </group>
                <group>
                    <field name="order_line_ids">
                        <tree editable="bottom">
                            <field name="product_id"/>
                            <field name="product_uom_qty"/>
                            <field name="price_unit"/>
                            <field name="tax_display"/>

                        </tree>
                    </field>
                </group>

                <footer>
                    <button name="confirm_action" type="object" string="Confirm" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>