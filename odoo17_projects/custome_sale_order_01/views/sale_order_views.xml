<odoo>
    <record id="view_order_form_custom_buttons" model="ir.ui.view">
        <field name="name">sale.order.form.custom.buttons</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <!-- Smart button showing count -->
                <button name="action_open_custom_records"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-database"
                        string="Custom Records">
                    <field name="custom_record_count" widget="statinfo"/>
                </button>

                <!-- Normal button opening form/tree -->
                <button name="action_open_custom_records"
                        type="object"
                        string="Open All Custom Records"
                        class="btn btn-primary"
                        />
            </xpath>
        </field>
    </record>
</odoo>
