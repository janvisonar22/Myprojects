<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_author_report_book_wizard_form" model="ir.ui.view">
		<field name="name">author.report.book.wizard.form</field>
		<field name="model">author.report.book.wizard</field>
		<field name="arch" type="xml">
			<form string="Author Report Wizard">
				<group>
                    <field name="author_ids" widget="many2many_tags"/>
					<field name="start_date"/>
					<field name="end_date"/>
				</group>
				<footer>
					<button name="generate_pdf_report" type="object" string="Generate Report" class="btn-primary"/>
					<button string="Cancel" class="btn-secondary" special="cancel"/>
				</footer>
		
			</form>
		</field>
	</record>

	<record id="action_author_report_book_wizard" model="ir.actions.act_window">
		<field name="name">Author Report Wizard</field>
		<field name="res_model">author.report.book.wizard</field>
		<field name="view_mode">form</field>
		<!-- <field name="target">new</field> -->
	</record>
	
</odoo>
