<odoo>
	
	<record id="view_book_search" model="ir.ui.view">
		<field name="name">library.book.search</field>
		<field name="model">library.book</field>
		<field name="arch" type="xml">
			<search>
				<field name="title" string="Title"/>
				<field name="author_id" string="Author"/>
			</search>
		</field>
	</record>
	<record id="view_library_book_tree" model="ir.ui.view">
			<field name="name">library.book.tree</field>
			<field name="model">library.book</field>
			<field name="arch" type="xml">
				<tree>
					<field name="title"/>
					<field name="author_id"/>
					<field name="publish_date"/>
				</tree>
			</field>
	</record>
     
	<record id="view_library_book_form" model="ir.ui.view">
		<field name="name">library.book.form</field>
		<field name="model">library.book</field>
		<field name="arch" type="xml">
			<form>
				<group>
					<field name="title"/>
					<field name="author_id"/>
					<field name="publish_date"/>
					<field name="pages"/>
				</group>
			</form>
		</field>
	</record>

	<record id="view_library_book_kanban" model="ir.ui.view">
		<field name="name">library.book.kanban</field>
		<field name="model">library.book</field>
		<field name="arch" type="xml">
			<kanban>
				<field name="title"/>
				<field name="author_id"/>
				<templates>
					<t t-name="kanban-box">
						<div class="oe_kanban_global_click">
							<strong><field name="title"/></strong><br/>
							<span><field name="author_id"/></span>
						</div>
					</t>
				</templates>
			</kanban>
		</field>
	</record>

	<record id="action_library_book" model="ir.actions.act_window">
		<field name="name">Books</field>
		<field name="res_model">library.book</field>
		<field name="view_mode">tree,form,kanban</field>
		<field name="search_view_id" ref="view_book_search"/>
	</record>
</odoo>
