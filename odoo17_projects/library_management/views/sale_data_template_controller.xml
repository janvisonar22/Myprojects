<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
	<template id="tmp_sales_data" name="Sales Details">
		<t t-call="website.layout">
			<div class="oe_structure">
				<div class="container">
					<br/>
					<center>
						<h3>Sales Order Details</h3>
					</center>
					<br/>
					<table class="table-striped table">
						<thead style="font-size:23px">
							<tr>
								<th>Sale Order</th>
								<th>Customer</th>
								<th>Date</th>
								<th>State</th>
							</tr>
						</thead>
						<tbody>
							<t t-foreach="record" t-as="order">
								<tr>
									<td>
										<span t-esc="order.name"/>

									</td>	
									<td>
										<span t-esc="order.partner_id.name"/>
									</td>
									<td>
										<span t-esc="order.date_order"/>
									</td>
									<td>
										<span t-esc="order.state"/>
									</td>
								</tr>
							</t>
						</tbody>
					</table>
				</div>
			</div>
		</t>
	</template>

</odoo>