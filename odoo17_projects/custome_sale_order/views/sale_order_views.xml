<odoo>
    <record id="view_order_form_inherit_custom_button" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.custom.button.next_to_send</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@id='send_by_email']" position="after">
                <button name="action_custom_button"
                        type="object"
                        string="Custom Action"
                        class="btn-secondary"
                        data-hotkey="c"/>

            <div name="button_box" position="inside">
                <button class="oe_stat_button" 
                         type="object" 
                         string="pre sale order"
                         icon="fa-pencil"                         
                         name="action_get_vehicles_record">
                </button>
            </div>

            </xpath>
        </field>
    </record>
</odoo>
