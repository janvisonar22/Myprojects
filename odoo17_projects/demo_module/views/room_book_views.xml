<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_hotel_room_tree" model="ir.ui.view">
        <field name="name">room.book.tree</field>
        <field name="model">room.book</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="room_type"/>
                <field name="is_available"/>
                <field name="price_per_night"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_hotel_room_form" model="ir.ui.view">
        <field name="name">room.book.form</field>
        <field name="model">room.book</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="room_type"/>
                        <field name="is_available"/>
                        <field name="price_per_night"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hotel_room" model="ir.actions.act_window">
        <field name="name">Room Book</field>
        <field name="res_model">room.book</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu Item -->
<!--     <menuitem id="hotel_menu_root" name="Hotel"/>
    <menuitem id="hotel_room_menu" name="Rooms" parent="hotel_menu_root" action="action_hotel_room"/>
 -->
</odoo>