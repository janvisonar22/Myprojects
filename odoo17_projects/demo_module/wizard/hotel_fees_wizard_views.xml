<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_hotel_fees_wizard" model="ir.ui.view">
        <field name="name">hotel.fees.wizard.form</field>
        <field name="model">hotel.fees.wizard</field>
        <field name="arch" type="xml">
            <form string="Hotel Fees Wizard">
                <group>
                    <field name="hotel_number"/>
                    <field name="entry_fees"/>
                    <field name="exit_fees"/>
                    <field name="result" readonly="1"/>

                </group>
                <footer>
                    <button string="Close" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_hotel_wizard" model="ir.actions.act_window">
        <field name="name">Hotel Count</field>
        <field name="res_model">hotel.fees.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field> 
    </record>
</odoo>
