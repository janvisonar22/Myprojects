<odoo>
	<template id="website_sale_order_form" name="Website Sale Order Form">
		<t t-call="website.layout">
			<div style="max-width: 500px; margin: 40px auto; padding: 20px; background: #ffffff; border: 1px solid #ddd; border-radius: 10px;">

				<h2 style="text-align: center; margin-bottom: 20px; color: #2c3e50;">
					ðŸ›’ Create Sale Order
				</h2>

				<!-- Message Display -->
				<t t-if="message">
					<div style="background: #e6ffed; color: #2d7a32; padding: 10px; border-radius: 5px; border: 1px solid #b3e6b8; margin-bottom: 15px; text-align: center;">
						<t t-esc="message"/>
					</div>
				</t>

				<form method="POST" action="/create-sale-order">
					
					<!-- Customer Name -->
					<label style="display: block; font-weight: bold; margin-bottom: 5px;">Customer Name</label>
					<input type="text" name="partner_name" required="required"
						style="width: 100%; padding: 8px; border-radius: 5px; border: 1px solid #ccc; margin-bottom: 15px;"/>

					<!-- Order Date -->
					<label style="display: block; font-weight: bold; margin-bottom: 5px;">Order Date</label>
					<input type="date" name="date_order" required="required"
						style="width: 100%; padding: 8px; border-radius: 5px; border: 1px solid #ccc; margin-bottom: 15px;"/>

					<!-- Product Selection -->
					<label style="display: block; font-weight: bold; margin-bottom: 5px;">Product</label>
					<select name="product_id" required="required"
						style="width: 100%; padding: 8px; border-radius: 5px; border: 1px solid #ccc; margin-bottom: 15px;">
						<t t-foreach="request.env['product.product'].sudo().search([])" t-as="product">
							<option t-att-value="product.id">
								<t t-esc="product.name"/>
							</option>
						</t>
					</select>

					<!-- Quantity -->
					<label style="display: block; font-weight: bold; margin-bottom: 5px;">Quantity</label>
					<input type="number" name="quantity" required="required" min="1" value="1"
						style="width: 100%; padding: 8px; border-radius: 5px; border: 1px solid #ccc; margin-bottom: 20px;"/>

					<!-- Submit Button -->
					<button type="submit"
						style="width: 100%; background-color: #27ae60; color: white; padding: 10px; border: none; border-radius: 5px; font-size: 16px; cursor: pointer;">
						âœ… Create Order
					</button>
				</form>
			</div>
		</t>
	</template>
</odoo>
