<odoo>
	<template id="report_school_attandance_template">
		<t t-call="web.html_container">
			<t t-call="web.external_layout">
				<t t-foreach="docs" t-as="o">
					<div class="page">
						<h2>Attandance</h2>
						<br/>

						<!-- Header Information -->
						<div style="display: flex; justify-content: space-between; width: 100%;">
							<div>
								<p><strong>Teacher Name:</strong> <t t-esc="o.teacher_id.name"/></p>
								<p><strong>Standard:</strong> <t t-esc="o.standard_id"/></p>
								<p><strong>TimeTable:</strong> <t t-esc="o.timetable_id.name"/></p>
							</div>
							<div style="text-align: right;">
								<p><strong>From Time:</strong> <t t-esc="o.from_time"/></p>
								<p><strong>To Time:</strong> <t t-esc="o.to_time"/></p>
							</div>
						</div>

						<!-- Attandace Lines Table -->
						<br/>
						<table class="table table-sm" style="width:100%; border-collapse: collapse;" border="1">
							<thead style="background-color: #f0f0f0;">
								<tr>
									<th style="padding: 5px;">Students Name</th>
									<th style="padding: 5px;">Attandace</th>
								</tr>
							</thead>
							<tbody>
								<div style="display: flex; flex-wrap: wrap; gap: 10px; margin-top: 20px;">

								<t t-foreach="o.student_line_ids" t-as="line">
									<tr>
										<td style="padding: 5px;"><t t-esc="line.student_id.name"/></td>
										<td style="padding: 5px;"><t t-esc="line.present"/></td>

									</tr>
								</t>
							</div>
							</tbody>
						</table>

					</div>
				</t>
			</t>
		</t>
	</template>
</odoo>
