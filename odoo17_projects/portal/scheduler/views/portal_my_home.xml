<template id="portal_my_home_custom_module" name="Custom Portal Entries"
          inherit_id="portal.portal_my_home" priority="30">
    <xpath expr="//div[@id='portal_vendor_category']" position="after">
        <div id="portal_custom_category">
            <t t-call="portal.portal_docs_entry">
                <t t-set="icon" t-value="'/scheduler/static/src/img/custom.svg'"/>
                <t t-set="text">Track your Custom Portal Data</t>
                <t t-set="title">My Custom Records</t>
                <t t-set="url" t-value="'/my/custom'"/>
                <t t-set="placeholder_count" t-value="'custom_count'"/>
            </t>
        </div>
    </xpath>
</template>
